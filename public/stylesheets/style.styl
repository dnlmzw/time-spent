body
  padding: 50px
  font: 14px Helvetica, "Lucida Grande", Arial, sans-serif
a
  color: #00B7FF

table
  width 100%

  tr
    td
      padding 5px 10px

      &:first-child
        width 15%

      &:last-child
        width 10%
  
  thead
    td
      font-weight bold


.menu
  a
    margin-right 10px

.box
  margin 10px 0
  padding 0 0
  background-color #eee
  border-radius 10px

  &.date
    padding 10px

    input
      width 33%
      font-size 14px
      padding 5px
      border 1px solid #ccc
      border-radius 5px
      box-sizing border-box

  &.result
    padding 10px
    font-size 30px
    height 35px

    div
      width 50%
      float left
      text-align center

.list

  label, li
    display block
    padding 10px 10px
    border-bottom 1px solid #ccc
    border-top 1px solid #fff
    text-shadow 1px 1px 0px #fff
    text-transform uppercase
    cursor pointer

    a
      display block
      width 100%
      height 100%
      text-decoration none

    input
      margin-right 10px

    &:first-child
      border-top 0

    &:last-child
      border-bottom 0

    &:hover
      background-color rgba(255,255,255,.35)